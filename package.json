{
  "name": "electrum-require-components",
  "version": "1.4.1",
  "description": "This Electrum build tool generates a source file with a list of requires.",
  "main": "lib/index.js",
  "bin": {
    "electrum-require-components": "./bin/bin.js"
  },
  "scripts": {
    "compile": "rimraf ./lib && babel --quiet --out-dir lib src",
    "prepublish": "npm run compile",
    "test": "npm run compile && mocha lib/test/**/*.js",
    "livetest": "npm run compile && node lib/index.js --wrap --crlf ./src sample .foo.js foo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epsitec-sa/electrum-require-components.git"
  },
  "keywords": [
    "electrum",
    "javascript",
    "dynamic-require"
  ],
  "author": "Epsitec SA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epsitec-sa/electrum-require-components/issues"
  },
  "homepage": "https://github.com/epsitec-sa/electrum-require-components#readme",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "mai-chai": "^1.1.2",
    "mocha": "^2.4.5",
    "path": "^0.12.7",
    "react": "^0.14.7",
    "rimraf": "^2.5.1"
  }
}
